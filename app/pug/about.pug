extends includes/layout.pug

append variables
	- let pageTitle = "О компании";
	- description += pageTitle;
block crumbs 
	- var breadcrumbsList = ["О компании"];
	.about-page
		.container 
			.about-page__top.top-about
				.top-about__body
					.top-about__info
						+breadcrumbs([...breadcrumbsList], "Контакты")
						h1.top-about__title.page-title #{pageTitle}
						.top-about__description #{about.descr}
					.top-about__image.ibg
						img(src="images/about/img-banner.jpg", alt=`баннер ${pageTitle}`)
			.about-page__content.content
				ul 
					each item in about.list
						li= item
		.about-page__slider.slider-about
			.container
				.slider-about__body.swiper
					.slider-about__wrapper.swiper-wrapper 
						each slide in about.slider
							.slider-about__item.swiper-slide 	
								.slider-about__image.ibg
									img(src=`images/about/slide-${slide.img}.jpg`, alt="изоюражени слайда")
				.slider-about__controls 
					button(type="button").slider-button.slider-button-prev 
					button(type="button").slider-button.slider-button-next 